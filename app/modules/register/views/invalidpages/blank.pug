extends ../../../../templates/master.pug

block content
  link(rel="stylesheet" href="/assets/font-awesome-4.7.0/css/register.css")
  .signup-wrap
    .signup-html
        label Welcome 
        br
        br
        label1.tab Create Account
            br
            br
            label7.tab &nbsp&nbsp *Some fields were blank
        hr
        form(method="POST" action="/register")
            .group
                input.input1(type="text" maxlength="15" placeholder="Student Number" name="studnum", required)
            br
            .group
                input.input2(type="password" placeholder="Password" name="password", required)
            br
            .group 
                input.input2(type="password" placeholder="Confirm Password" name="confirm", required)
            br
            .group
                input.input1(type="text" placeholder="Full Name (John S. Doe)" name="studname", required)
            br
            .group
                input.input1(type="text" placeholder="E-mail Address" name="email", required)
            br
            .group
                input.input1(type="text" placeholder="Contact Info (Optional)" name="contact")
            br
            .group
            input.button.is-primary.is-inverted.is-outlined(type='submit', value='Register')
            a.button.is-info.is-inverted.is-outlined(href="/login") Back
