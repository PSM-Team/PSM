                      i.fa.fa-cogs
                      | &nbsp Settings
                      b &nbsp V
                      | &nbsp
                    div.navbar-dropdown.is-right
                        a.navbar-item(href="/home/rules") Rules
                        a.navbar-item(href="/home/help") Help
                        a.navbar-item(href="/home/contact_us") Contact Us
                        a.navbar-item(href="/login") Log-Out
        block content
