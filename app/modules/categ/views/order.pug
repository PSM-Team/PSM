extends ../../../templates/navbar.pug

block content
  each post in posttab
    h2.title
      |
      a(href='/categories/' + post.strCatName + '/' + post.intItemID) #{post.strItemTitle}
    hr(style='border: 0.5px solid #990000')
    p(style='display:inline') Price : Php &nbsp
      b #{post.fltItemPrice}
    p(style='display:inline') &nbsp ||
    p(style='display:inline') &nbsp Seller : &nbsp&nbsp
      u
        a(href='/profile/'+ post.strItemSNum ) #{post.strName} ( #{post.strItemSNum} )
    p(style='display:inline') &nbsp - #{post.strStatus}
    p(style='display:inline') &nbsp ||
    p(style='display:inline') &nbsp Commends : #{post.intCommend} &nbsp|&nbsp Reports : #{post.intReport}
    p Contact Information:
    p - Email : #{post.strEmail}
    p - #{post.txtContact}
    hr(style='border: 0.5px solid #990000')
    form(method="POST" action='/categories/' + post.strCatName + '/' + post.intItemID + '/order')
        .field
            .control
                input.input(type="password" placeholder="Order Password" name="orderpass")
        input(type="submit" value="Order")
    hr(style='border: 0.5px solid #990000')
    a.button.is-primary.is-inverted.is-outlined(href='/categories/' + post.strCatName + '/' + post.intItemID ) BACK
