extends ../../../../templates/navbar.pug

block content
  h3.title Sell an Item:
  h3.subtitle &nbspAll fields are required
  section.hero.is-danger.is-bold
    .hero-body
      h1.title Submission Failed
      h1.subtitle - Incorrect input for some fields
  br
  form(method="POST" action="/sell" enctype='multipart/form-data')
      .field
          .control
              .select.is-primary
                  select(name="category")
                    option(value='') -- Category --
                    option(value='Books') Books
                    option(value='School Supplies') School Supplies
                    option(value='Food') Food
                    option(value='Misc.') Misc.
      hr
      p Upload atleat One(1) Picture of the Item to be posted
      br
      .field
          .control
            div(style='width: 33%; float: left')
              label PICTURE 1
              br
              input.file-input(type='file', name='pic1', accept='image/*')
            div(style='width: 33%; float: left')
              label PICTURE 2
              br
              input.file-input(type='file', name='pic2', accept='image/*')
            div(style='width: 34%; float: right')
              label PICTURE 3
              br
              input.file-input(type='file', name='pic3', accept='image/*')
      br
      br
      hr
      .field
          .control
              input.input(type="text" placeholder="Item Title" name="title", required)
      .field
          .control
              input.input(type="text" placeholder="Item Price" name="price", required)
      .field
          .control
              input.input(type="text" placeholder="Item Description" name="description", required)
      .field
          .control
              input.input(type="password" placeholder="Order Password" name="orderpass", required)
      input.button.is-primary.is-inverted.is-outlined(type="submit" value="Post")
      hr
      a.button.is-primary.is-inverted.is-outlined(href='/home/page/1') Cancel
