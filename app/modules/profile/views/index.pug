extends ../../../templates/navbar.pug

block content
  link(rel="stylesheet" href="/assets/font-awesome-4.7.0/css/profile.css")
  body
    each user in usertab
      .container
        .innerwrap
          section.section1.clearfix
            div
              .row.grid.clearfix
                .col2.first
                  img(src='http://images.contactmusic.com/newsimages/david_beckham_1133321.jpg', alt='')
                  br
                  h3 #{user.strName}
                  hr
                  h4 #{user.strSNum}
                .col2.last
                  .grid.clearfix
                    .col3.first
                      h1 #{user.intCommend}
                      span Commend
                    .col3
                      h1 #{user.intReport}
                      span Report
                  .grid.clearfix      
                    p1
                        |&nbsp #{user.strStatus}
                        br
                    p2
                        |&nbsp #{user.strEmail}
                        br
                        |&nbsp #{user.txtContact}
              .row
                ul.row2tab
                  li
                    a.button.is-primary.is-outlined(class="button", href="/profile/-/edit") Edit Profile
                  li
                    a.button.is-primary.is-outlined(class="button", href="/profile/-/transactions/1") Transactions
                  li
                    a.button.is-primary.is-outlined(class="button", href="/profile/"+ user.strSNum +"/posts/1") Posts
                  li
                    a.button.is-primary.is-outlined