extends ../../../templates/master.pug

block content
  section.hero.is-primary.is-bold
    .hero-body
        div.container(style='height:100%')
          section.hero.is-dark.is-bold
            .hero-body
              h1.title PUP Student Market
          hr
          h3.title Sign In:
          form(method="POST" action="/login")
              .field
                  .control
                      input.input(type="text" placeholder="Student Number" name="studnum")
              .field
                  .control
                      input.input(type="password" placeholder="Password" name="password")
              input(type="submit" value="Sign-in")
          hr
          a.button.is-info.is-inverted.is-outlined(href="/register") REGISTER
