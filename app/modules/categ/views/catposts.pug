extends ../../../templates/navbar.pug

block content
  each catname in catnametab
    h2.title #{catname.strCatName}
    h2.subtitle &nbspClick an Item Title to view it's Details
  hr
  each item in itemtab
    if item.page == item.curpage
      h3.title
        |
        a(href='/categories/' + item.strCatName + '/' + item.intItemID) #{item.strItemTitle}
      p
        |
        b Price: Php #{item.price}
      p Seller: &nbsp
        u
          a(href='/profile/'+ item.strItemSNum ) #{item.strName} ( #{item.strItemSNum} )
      p Date: #{item.date}
      hr
  each catname in catnametab
    each curpage in curpagetab
      .field.is-grouped
        if curpage > 1
          each prevpage in prevpagetab
            p.control
              a.button.is-primary.is-inverted.is-outlined.is-hovered(href='/categories/'+ catname.strCatName +'/page/'+ prevpage ) << Previous
        each page in pagetab
          if page == curpage
            p.control
              a.button.is-primary.is-inverted.is-hovered() #{page}
          else
            p.control
              a.button.is-primary.is-inverted.is-outlined(href='/categories/'+ catname.strCatName +'/page/'+ page ) #{page}
        each nextpage in nextpagetab
          p.control
            a.button.is-primary.is-inverted.is-outlined.is-hovered(href='/categories/'+ catname.strCatName +'/page/'+ nextpage ) Next >>
