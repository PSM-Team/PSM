extends ../../../templates/navbar.pug

block content
  section.hero.is-primary.is-bold
    .hero-body
        div.container(style='height:100%')
          each user in usertab
            h2.title #{user.strName}
            h2.subtitle &nbsp#{user.strSNum}
            hr
            div(style='width: 25%; float: left')
              h3.subtitle
                b Status:
              h3.subtitle
                b Branch:
              h3.subtitle
                b Gender:
              h3.subtitle
                b Birthday:
              h3.subtitle
                b E-mail:
              h3.subtitle
                b Contact Information:
            div(style='width: 75%; float: right')
              h3.subtitle #{user.strStatus}
              h3.subtitle #{user.strBranch}
              h3.subtitle #{user.strGender}
              h3.subtitle #{user.bday}
              h3.subtitle #{user.strEmail}
              h3.subtitle #{user.txtContact}
            div(align='left')
              p &nbsp
              br
              br
              hr
              .field.is-grouped
                p.control
                  a.button.is-primary.is-inverted.is-outlined(class="button", href="/profile/-/edit") Edit Profile
                p.control
                  a.button.is-primary.is-inverted.is-outlined(class="button", href="/profile/trans") Transactions
                p.control
                  a.button.is-primary.is-inverted.is-outlined(class="button", href="/profile/"+ user.strSNum +"/posts") Posts
