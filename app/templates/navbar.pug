html
    head
        title PUP Student Market

        link(rel="stylesheet" href="/assets/bulma/bulma.css")
        link(rel="stylesheet" href="/assets/font-awesome-4.7.0/css/font-awesome.min.css")

    body
        nav.navbar
            div.navbar-brand
                a.navbar-item(href="/home") PUP STUDENT MARKET
            div.navbar-brand
                a.navbar-item(href="/categories") Categories
            div.navbar-brand
                a.navbar-item(href="/profile") Profile
            div.navbar-brand
                a.navbar-item(href="/sell") Sell Item


            div.navbar-end
                div.navbar-item
                    form.navbar-form(role='search')
